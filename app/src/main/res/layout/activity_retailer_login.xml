<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:transitionName="transition_login"
    tools:context=".Common.LoginSignup.RetailerLoginActivity">

    <ImageButton
        android:id="@+id/back_arrow_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        app:tint="@android:color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/retailer_login_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/retailerLoginTitle"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toStartOf="@+id/retailer_login_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_arrow_btn" />

    <TextView
        android:id="@+id/retailer_login_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/retailerLoginMessage"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toStartOf="@+id/retailer_login_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_title" />

    <ImageView
        android:id="@+id/retailer_login_illustration"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/illustration_retailer_login"
        app:layout_constraintBottom_toBottomOf="@+id/retailer_login_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/retailer_login_title" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/retailer_login_ccp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:ccp_autoDetectCountry="true"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="true"
        app:ccp_showFullName="true"
        app:ccp_arrowColor="@android:color/black"
        app:ccp_contentColor="@android:color/black"
        app:ccp_padding="16dp"
        app:ccp_textSize="14sp"
        app:ccp_rememberLastSelection="true"
        android:gravity="center"
        app:ccp_showArrow="true"
        app:ccp_showPhoneCode="true"
        app:ccpDialog_allowSearch="true"
        app:ccpDialog_fastScroller_bubbleColor="@color/colorPrimaryDark"
        app:ccpDialog_backgroundColor="@android:color/white"
        app:ccpDialog_showCloseIcon="true"
        app:ccpDialog_showFlag="true"
        app:ccpDialog_showNameCode="true"
        app:ccpDialog_showPhoneCode="true"
        app:ccpDialog_showTitle="true"
        app:ccpDialog_textColor="@android:color/black"
        android:background="@drawable/bg_country_code_picker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_illustration"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/retailer_login_mobile_field"
        android:theme="@style/TextInputLayoutAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/retailerSignUpMobileHint"
        app:boxStrokeColor="@android:color/black"
        app:boxStrokeWidthFocused="2dp"
        app:endIconMode="clear_text"
        app:endIconTint="@android:color/black"
        app:hintTextColor="@android:color/black"
        app:errorIconTint="@color/errorColor"
        app:errorTextColor="@color/errorColor"
        app:boxStrokeErrorColor="@color/errorColor"
        app:boxCornerRadiusTopStart="2dp"
        app:boxCornerRadiusTopEnd="2dp"
        app:boxCornerRadiusBottomStart="2dp"
        app:boxCornerRadiusBottomEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_ccp"
        app:startIconDrawable="@drawable/ic_mobile"
        app:startIconTint="@android:color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:cursorVisible="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/retailer_login_password_field"
        android:theme="@style/TextInputLayoutAppearance"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/retailerLoginPasswordHint"
        app:hintTextColor="@android:color/black"
        app:boxStrokeColor="@android:color/black"
        app:boxStrokeWidthFocused="2dp"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="@android:color/black"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/black"
        app:errorIconTint="@color/errorColor"
        app:errorTextColor="@color/errorColor"
        app:boxStrokeErrorColor="@color/errorColor"
        app:boxCornerRadiusTopStart="2dp"
        app:boxCornerRadiusTopEnd="2dp"
        app:boxCornerRadiusBottomStart="2dp"
        app:boxCornerRadiusBottomEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_mobile_field">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:textColor="@android:color/black"
            android:textAlignment="textStart"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:cursorVisible="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/retailer_login_remember_me_checkbox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:buttonTint="@android:color/black"
        android:fontFamily="@font/poppins"
        android:text="@string/retailerLoginRememberMeCheckBox"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_password_field" />

    <TextView
        android:id="@+id/retailer_login_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/poppins"
        android:padding="8dp"
        android:text="@string/retailerLoginForgotPassword"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/retailer_login_remember_me_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/retailer_login_remember_me_checkbox" />

    <Button
        android:id="@+id/retailer_login_login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/black"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/retailerLoginBtn"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_forgot_password" />

    <TextView
        android:id="@+id/retailer_login_create_account_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/retailerLoginCreateAccountMsg"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        android:alpha="0.5"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_login_btn" />

    <TextView
        android:id="@+id/retailer_login_create_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/poppins"
        android:padding="8dp"
        android:text="@string/retailerLoginCreateAccountBtn"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retailer_login_create_account_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>